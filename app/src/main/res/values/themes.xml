<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.Travel_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/maincolor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="buttonStyle">@style/CustomButtonStyle</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CalendarWidgetHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="CalenderViewCustom" parent="Theme.MaterialComponents">
        <item name="android:textColor">@drawable/calendar_selector_textcolor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CalenderViewDateCustomText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@drawable/calendar_selector_textcolor</item>
    </style>
    <style name="CalenderViewWeekCustomText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">#000000</item>
    </style>
</resources>
